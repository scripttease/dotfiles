[user]
  name = Alice Dee
  email = alice.dee@guardian.co.uk
[core]
  excludesfile = ~/.gitignore

[push]
  default = simple
[alias]
  br = branch
  ci = commit
  co = checkout
  dh = diff HEAD
  amend = commit --amend
  lol = log --pretty=oneline --abbrev-commit --graph --decorate
  st = status
  g = grep --break --heading --line-number
  gi = grep --break --heading --line-number --ignore-case
  files-ive-edited = !git log --no-merges --stat --author='Alice Dee' --name-only --pretty=format:"" | sort -u | tail -n +2
  cleanup = "!git branch --merged | grep -v \"\\*\" | grep -v master | grep -v dev | xargs -n 1 git branch -d"
  fpp = "!git st | fpp"
  git = "!git"
